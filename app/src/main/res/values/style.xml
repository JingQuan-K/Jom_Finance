<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
      <item name="android:windowBackground">@drawable/popup_background</item>
    </style>

    <style name="Floating_income" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/incomeTheme</item>
        <item name="tint">@color/white</item>
        <item name="maxImageSize">36dp</item>
    </style>
    <style name="Floating_expenses" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/expensesTheme</item>
        <item name="tint">@color/white</item>
    </style>
    <style name="long_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
    </style>
</resources>