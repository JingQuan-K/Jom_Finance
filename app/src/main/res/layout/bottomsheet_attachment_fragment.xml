<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bar_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingTop="40dp"
        android:paddingEnd="10dp"
        android:paddingBottom="40dp">


        <Button
            android:id="@+id/attachementCamera_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_baseline_camera_alt_24"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text=" Camera "
            android:textAllCaps="false"
            android:textColor="@color/iris"
            app:backgroundTint="#EEE5FF"
            app:cornerRadius="16dp"
            app:iconPadding="2dp"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/attachementImage_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_baseline_image_24"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="   Image   "
            android:textAllCaps="false"
            android:textColor="@color/iris"
            app:backgroundTint="#EEE5FF"
            app:cornerRadius="16dp"
            app:iconPadding="2dp"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/attachementDocument_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_baseline_insert_drive_file_24"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="Document"
            android:textAllCaps="false"
            android:textColor="@color/iris"
            app:backgroundTint="#EEE5FF"
            app:cornerRadius="16dp"
            app:iconPadding="2dp"
            android:stateListAnimator="@null"/>
    </LinearLayout>

</LinearLayout>
