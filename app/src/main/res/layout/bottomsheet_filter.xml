<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:backgroundTint="@color/white"
    app:cornerRadius="20dp">

    <ImageView
        android:id="@+id/bar_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter Transaction"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_weight="4"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/filter_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/iris"
            android:text="Reset"
            app:cornerRadius="20dp"
            android:backgroundTint="#EEE5FF"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="Filter By"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <Button
            android:id="@+id/filter_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Income"
            app:cornerRadius="20dp"
            android:backgroundTint="@color/white"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp"/>

        <Button
            android:id="@+id/filter_expense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Expense"
            app:cornerRadius="20dp"
            android:backgroundTint="@color/white"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp"/>

    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="Sort By"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">



        <Button
            android:id="@+id/filter_highest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Highest"
            app:cornerRadius="20dp"
            android:backgroundTint="@color/white"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp"/>

        <Button
            android:id="@+id/filter_lowest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Lowest"
            app:cornerRadius="20dp"
            android:backgroundTint="@color/white"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp"/>
        <Button
            android:id="@+id/filter_newest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Newest"
            app:cornerRadius="20dp"
            android:backgroundTint="@color/white"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <Button
            android:id="@+id/filter_oldest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Oldest"
            app:cornerRadius="20dp"
            android:backgroundTint="@color/white"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp"/>
    </LinearLayout>



</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="Category"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chips_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:singleSelection="false">

    </com.google.android.material.chip.ChipGroup>

    <Button
        android:id="@+id/applyFilterBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/long_button"
        android:layout_margin="10dp"
        android:paddingVertical="20dp"
        app:cornerRadius="16dp"
        android:textColor="@color/white"
        android:text="Apply"
        android:backgroundTint="@color/iris_deep"
        />

</LinearLayout>